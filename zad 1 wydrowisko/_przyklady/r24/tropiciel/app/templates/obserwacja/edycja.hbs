<h1>Zmiana danych obserwacji:
  <small>
    {{model.obserwacja.miejsce}} -
    {{data-od model.obserwacja.dataObserwacji}}
  </small>
</h1>
<form {{action "zmien" model on="submit"}}>
  <div class="form-group">
    <label for="nazwa">Stwór</label>
    {{input value=model.obserwacja.stwor.nazwa type="text" class="form-control"
      name="miejsce" disabled=true}}
  </div>
  <div class="form-group">
    <label>Świadkowie</label>
    {{#each model.obserwacja.swiadkowie as |swiadek|}}
      {{input value=swiadek.imieNazwisko type="text" class="form-control"
        name="miejsce" disabled=true}}
    {{/each}}
  </div>
  <div class="form-group">
    <label for="miejsce">Miejsce</label>
    {{input value=model.obserwacja.miejsce type="text" class="form-control"
      name="miejsce" required=true}}
  </div>
  <button type="submit" class="btn btn-info btn-block">Zmień</button>
  <button {{action 'anuluj'}} class="btn btn-block">Anuluj</button>
</form>

<hr>
<button {{action 'usun'}} class="btn btn-block btn-danger">
  Usuń
</button>
