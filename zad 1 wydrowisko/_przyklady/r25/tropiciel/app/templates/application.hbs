<header>
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <!-- Tytuł i przyciski umieszczone w grupie, aby strona była
        lepiej wyświetlana na urządzeniach przenośnych -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed"
          data-toggle="collapse" data-target="#top-navbar-collapse">
          <span class="sr-only">Przełączanie nawigacji</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand">Tropiciel</a>
      </div>
      <!-- Odnośniki nawigacyjne, formularze i inne przełączane elementy -->
      <div class="collapse navbar-collapse" id="top-navbar-collapse">
        <ul class="nav navbar-nav">
          <li>
            {{#link-to 'obserwacje'}}Obserwacje{{/link-to}}
          </li>
          <li>
            {{#link-to 'stwory'}}Stwory{{/link-to}}
          </li>
          <li>
            {{#link-to 'swiadkowie'}}Świadkowie{{/link-to}}
          </li>
        </ul>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>
</header>
<div class="container">
  {{#if alertWidoczny}}
    {{flash-alert komunikat=trescAlertu typAlertu=typAlertu
      close=(action "usunAlert")}}
  {{/if}}
  {{outlet}}
</div>
