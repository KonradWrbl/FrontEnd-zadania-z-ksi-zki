<div class="row">
  {{#each model as |obserwacja|}}
    <div class="col-xs-12 col-sm-3 text-center">
      <div class="media well">
        <img class="media-object thumbnail" src="{{if obserwacja.stwor.zdjecie
          obserwacja.stwor.zdjecie 'obrazy/pusty.png'}}"
          alt="{{obserwacja.stwor.nazwa}}" width="100%" height="100%">
        <div class="caption">
          <h3>{{obserwacja.stwor.nazwa}}</h3>
          {{#if obserwacja.miejsce}}
            <h3>{{obserwacja.miejsce}}</h3>
            <p>{{data-od obserwacja.dataObserwacji}}</p>
          {{else}}
            <h3 class="text-danger">Zmyślona obserwacja</h3>
          {{/if}}
        </div>
        {{#link-to 'obserwacja.edycja' obserwacja.id tagName="button"
          class="btn btn-success btn-block"}}
          Zmień
        {{/link-to}}
      </div>
    </div>
  {{/each}}
</div>
